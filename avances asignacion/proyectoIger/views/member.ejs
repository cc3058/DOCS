    #popCircle{display:none; background:#efefef; border:1px solid black; width:50%; height: 200px; margin: 0%;}
    
    #popEstudiantes{display:none; background:#efefef; border:1px solid black; width:50%; height: 200px; margin: 0%;}

    #popEncargados{display:none; background:#efefef; border:1px solid black; width:50%; height: 200px; margin: 0%;}

